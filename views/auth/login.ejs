<%- include('../partials/header') %>

<!-- Fullscreen Background Container -->
<div style="width: 100vw; height: 100vh; background: url('https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&w=2000&q=80') no-repeat center center/cover; display: flex; align-items: center; justify-content: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">

  <!-- Glassmorphic Login Card -->
  <div style="background: rgba(0, 0, 0, 0.75); padding: 40px; max-width: 420px; width: 100%; border-radius: 16px; box-shadow: 0 8px 30px rgba(0,0,0,0.4); color: white;">
    
    <!-- Heading -->
    <h2 style="text-align: center; color: #f1f1f1; font-size: 28px; margin-bottom: 25px;">ðŸ§© Welcome to QuickDesk</h2>

    <!-- Error Message -->
    <% if (typeof error !== 'undefined') { %>
      <div style="background-color: #ffdddd; border-left: 5px solid #ff4d4d; padding: 12px; margin-bottom: 20px; color: #800000; border-radius: 6px;">
        <%= error %>
      </div>
    <% } %>

    <!-- Login Form -->
    <form action="/login" method="POST" autocomplete="off">
      
      <!-- Email Field -->
      <div style="margin-bottom: 18px;">
        <label for="email" style="display: block; margin-bottom: 8px; font-weight: 600;">Email Address</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          placeholder="yourname@example.com" 
          required 
          aria-label="Email"
          style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; font-size: 15px;"
        />
      </div>

      <!-- Password Field -->
      <div style="margin-bottom: 24px;">
        <label for="password" style="display: block; margin-bottom: 8px; font-weight: 600;">Password</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          placeholder="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢" 
          required 
          aria-label="Password"
          style="width: 100%; padding: 12px; border: 1px solid #ccc; border-radius: 10px; font-size: 15px;"
        />
      </div>

      <!-- Login Button -->
      <button 
        type="submit" 
        style="width: 100%; padding: 14px; background-color: #007bff; color: white; border: none; border-radius: 10px; font-size: 16px; font-weight: bold; cursor: pointer; transition: background 0.3s;">
        Login
      </button>
    </form>

    <!-- Register Link -->
    <p style="margin-top: 20px; text-align: center; color: #ccc; font-size: 14px;">
      Donâ€™t have an account? 
      <a href="/register" style="color: #00bfff; font-weight: 600; text-decoration: none;">Register here</a>
    </p>

  </div>
</div>

<%- include('../partials/footer') %>
